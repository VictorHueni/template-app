{
    "name": "frontend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "api:generate": "openapi-ts",
        "mock-api": "prism mock ../api/specification/openapi.yaml --port 4010 --host 0.0.0.0 --cors",
        "dev": "npm run api:generate && vite",
        "dev:mock": "cross-env VITE_AUTH_MODE=mock VITE_USE_PRISM=true VITE_PROXY_TARGET=http://localhost:4010 VITE_AUTH_PROXY_TARGET=http://localhost:8080 concurrently \"npm run mock-api\" \"npm run dev\" --names \"prism,vite\" --prefix-colors \"cyan,green\"",
        "dev:mock-real": "cross-env VITE_AUTH_MODE=real VITE_USE_PRISM=true VITE_PROXY_TARGET=http://localhost:4010 VITE_AUTH_PROXY_TARGET=http://localhost:8080 concurrently \"npm run mock-api\" \"npm run dev\" --names \"prism,vite\" --prefix-colors \"cyan,green\"",
        "dev:mock-auth": "npm run dev:mock",
        "build": "npm run api:generate && tsc -b && vite build",
        "lint": "eslint .",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "preview": "vite preview --port 4173",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "playwright test",
        "test:e2e:mock": "playwright test --config=playwright.config.mock.ts",
        "test:e2e:ci": "playwright test --reporter=line"
    },
    "dependencies": {
        "react": "^19.1.1",
        "react-dom": "^19.1.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@hey-api/openapi-ts": "^0.88.1",
        "@playwright/test": "^1.56.1",
        "@stoplight/prism-cli": "^5.14.2",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^24.6.0",
        "@types/react": "^19.2.4",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react-swc": "^4.1.0",
        "@vitest/coverage-v8": "^4.0.9",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "eslint": "^9.36.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.22",
        "globals": "^16.4.0",
        "jsdom": "^27.2.0",
        "msw": "^2.12.4",
        "prettier": "^3.3.3",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.45.0",
        "vite": "7.1.11",
        "vitest": "^4.0.9"
    }
}
